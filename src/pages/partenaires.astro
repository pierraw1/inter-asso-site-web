          <CreditCard class="h-6 w-6" />
          <span class="font-semibold">Pr√©sente ta carte √©tudiante pour b√©n√©ficier des avantages</span>
        </div>
      </div>
    </section>

    <!-- Liste des partenaires -->
    <section class="py-16 md:py-24 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-7xl mx-auto space-y-8">
          
          {partenaires.map((partenaire, index) => (
            <article 
              class={`bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all ${index % 2 === 1 ? 'ml-auto' : ''}`}
            >
              <div class="grid grid-cols-1 lg:grid-cols-12 gap-0">
                
                <!-- Logo (colonne gauche) -->
                <div class="lg:col-span-3 bg-gray-50 flex items-center justify-center p-8 lg:p-12">
                  <img 
                    src={partenaire.logo} 
                    alt={`Logo ${partenaire.nom}`}
                    class="max-w-full max-h-32 object-contain"
                  />
                </div>

                <!-- Contenu principal (colonne centrale) -->
                <div class="lg:col-span-6 p-8 lg:p-12 flex flex-col justify-center">
                  <!-- Cat√©gorie + Badge r√©duction -->
                  <div class="flex items-center gap-3 mb-4">
                    <span class="px-3 py-1 bg-purple-100 text-purple-700 text-xs font-semibold rounded-full">
                      {partenaire.categorie}
                    </span>
                    <span class="px-3 py-1 bg-green-100 text-green-700 text-xs font-bold rounded-full">
                      {partenaire.reduction}
                    </span>
                  </div>

                  <!-- Nom -->
                  <h3 class="text-3xl font-bold text-gray-900 mb-3">
                    {partenaire.nom}
                  </h3>

                  <!-- Adresse -->
                  {partenaire.adresse && (
                    <div class="flex items-start gap-2 text-sm text-gray-600 mb-4">
                      <MapPin class="h-4 w-4 flex-shrink-0 mt-0.5 text-purple-500" />
                      <span>{partenaire.adresse}</span>
                    </div>
                  )}

                  <!-- Description -->
                  <p class="text-gray-600 mb-4 leading-relaxed">
                    {partenaire.description}
                  </p>

                  <!-- Informations compl√©mentaires -->
                  <div class="space-y-2 text-sm">
                    {partenaire.tel && (
                      <p class="text-gray-700">
                        üìû <a href={`tel:${partenaire.tel.replace(/\s/g, '')}`} class="hover:text-purple-600 font-medium">{partenaire.tel}</a>
                      </p>
                    )}
                    {partenaire.instagram && (
                      <p class="text-gray-700">
                        üì∑ <span class="font-medium">{partenaire.instagram}</span>
                      </p>
                    )}
                  </div>
                </div>

                <!-- Informations d'utilisation (colonne droite) -->
                <div class="lg:col-span-3 bg-gradient-to-br from-purple-50 to-pink-50 p-8 lg:p-12 flex flex-col justify-center">
                  <h4 class="font-bold text-gray-900 mb-4">Comment en profiter ?</h4>
                  
                  {partenaire.typeReduction === 'carte' && (
                    <div class="space-y-3">
                      <div class="flex items-start gap-3">
