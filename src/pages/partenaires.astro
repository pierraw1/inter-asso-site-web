                        <p class="text-sm text-gray-700">
                          Partenaire officiel de l'Inter-Asso
                        </p>
                      </div>
                    </div>
                  )}
                  
                  {partenaire.typeReduction === 'demande' && (
                    <div class="space-y-3">
                      <div class="flex items-start gap-3">
