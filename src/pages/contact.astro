---
// src/pages/contact.astro
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { Mail, MapPin, Send, Instagram, MessageSquare } from "@lucide/astro";
---

<Layout title="Nous contacter">
  <Header />

  <main>
    <!-- Hero section -->
    <section
      class="bg-gradient-to-br from-purple-600 via-pink-500 to-orange-400 text-white py-16 md:py-20"
    >
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">Nous contacter</h1>
        <p class="text-xl md:text-2xl text-white/90 max-w-3xl mx-auto">
          Une question, une suggestion ou envie de nous rejoindre ? Écris-nous !
        </p>
      </div>
    </section>

    <!-- Section principale -->
    <section class="py-16 md:py-24 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <!-- Colonne gauche : Informations de contact -->
            <div>
              <h2 class="text-3xl font-bold text-gray-900 mb-8">
                Nos coordonnées
              </h2>

              <!-- Email -->
              <div
                class="bg-white rounded-xl p-6 shadow-md mb-6 hover:shadow-lg transition-shadow"
              >
                <div class="flex items-start gap-4">
                  <div class="flex-shrink-0">
                    <div
                      class="w-14 h-14 bg-gradient-to-br from-purple-500 to-pink-500 rounded-full flex items-center justify-center"
                    >
                      <Mail class="h-7 w-7 text-white" />
                    </div>
                  </div>
                  <div>
                    <h3 class="font-bold text-lg text-gray-900 mb-2">Email</h3>
                    <a
                      href="mailto:hello@inter-asso.fr"
                      class="text-purple-600 hover:text-purple-700 font-medium"
                    >
                      hello@inter-asso.fr
                    </a>
                    <p class="text-sm text-gray-500 mt-1">
                      Nous répondons sous 48h
                    </p>
                  </div>
                </div>
              </div>

              <!-- Discord -->
              <div
                class="bg-white rounded-xl p-6 shadow-md mb-6 hover:shadow-lg transition-shadow"
              >
                <div class="flex items-start gap-4">
                  <div class="flex-shrink-0">
                    <div
                      class="w-14 h-14 bg-gradient-to-br from-indigo-500 to-purple-500 rounded-full flex items-center justify-center"
                    >
                      <MessageSquare class="h-7 w-7 text-white" />
                    </div>
                  </div>
                  <div>
                    <h3 class="font-bold text-lg text-gray-900 mb-2">
                      Discord
                    </h3>
                    <a
                      href="https://discord.gg/BG62QR77pP"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-indigo-600 hover:text-indigo-700 font-medium"
                    >
                      Rejoins notre serveur
                    </a>
                    <p class="text-sm text-gray-500 mt-1">
                      Discute avec la communauté
                    </p>
                  </div>
                </div>
              </div>

              <!-- Adresse -->
              <div
                class="bg-white rounded-xl p-6 shadow-md mb-6 hover:shadow-lg transition-shadow"
              >
                <div class="flex items-start gap-4">
                  <div class="flex-shrink-0">
                    <div
                      class="w-14 h-14 bg-gradient-to-br from-orange-500 to-yellow-500 rounded-full flex items-center justify-center"
                    >
                      <MapPin class="h-7 w-7 text-white" />
                    </div>
                  </div>
                  <div>
                    <h3 class="font-bold text-lg text-gray-900 mb-2">
                      Adresse
                    </h3>
                    <p class="text-gray-700">
                      Inter-Asso IUT de Lannion<br />
                      Rue Édouard Branly<br />
                      22300 Lannion, France
                    </p>
                    <a
                      href="https://www.google.com/maps/search/?api=1&query=IUT+Lannion"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="inline-block mt-2 text-orange-600 hover:text-orange-700 font-medium text-sm"
                    >
                      Voir sur Google Maps →
                    </a>
                  </div>
                </div>
              </div>

              <!-- Réseaux sociaux -->
              <div class="mt-8">
                <h3 class="font-bold text-lg text-gray-900 mb-4">
                  Suivez-nous
                </h3>
                <div class="flex gap-4">
                  <a
                    href="https://instagram.com/inter_asso"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center justify-center w-12 h-12 bg-gradient-to-br from-purple-500 to-pink-500 text-white rounded-full hover:scale-110 transition-transform shadow-lg"
                    aria-label="Instagram"
                  >
                    <Instagram class="h-6 w-6" />
                  </a>
                </div>
              </div>
            </div>

            <!-- Colonne droite : Formulaire de contact avec Formspree -->
            <div class="bg-white rounded-2xl p-8 shadow-lg">
              <h2 class="text-3xl font-bold text-gray-900 mb-6">
                Envoie-nous un message
              </h2>

              <!-- Formulaire Formspree -->
              <form
                action="https://formspree.io/f/xpwvgpwe"
                method="POST"
                class="space-y-6"
                id="contact-form"
              >
                <!-- Nom -->
                <div>
                  <label
                    for="nom"
                    class="block text-sm font-semibold text-gray-900 mb-2"
                  >
                    Nom complet *
                  </label>
                  <input
                    type="text"
                    id="nom"
                    name="nom"
                    required
                    class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-purple-500 focus:outline-none transition-colors"
                    placeholder="Jean Dupont"
                  />
                </div>

                <!-- Email -->
                <div>
                  <label
                    for="email"
                    class="block text-sm font-semibold text-gray-900 mb-2"
                  >
                    Email *
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="_replyto"
                    required
                    class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-purple-500 focus:outline-none transition-colors"
                    placeholder="jean.dupont@exemple.fr"
                  />
                </div>

                <!-- Téléphone -->
                <div>
                  <label
                    for="telephone"
                    class="block text-sm font-semibold text-gray-900 mb-2"
                  >
                    Téléphone
                  </label>
                  <input
                    type="tel"
                    id="telephone"
                    name="telephone"
                    class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-purple-500 focus:outline-none transition-colors"
                    placeholder="06 12 34 56 78"
                  />
                </div>

                <!-- Sujet -->
                <div>
                  <label
                    for="sujet"
                    class="block text-sm font-semibold text-gray-900 mb-2"
                  >
                    Sujet *
                  </label>
                  <select
                    id="sujet"
                    name="_subject"
                    required
                    class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-purple-500 focus:outline-none transition-colors"
                  >
                    <option value="">Choisis un sujet</option>
                    <option value="[Contact] Demande d'information"
                      >Demande d'information</option
                    >
                    <option value="[Contact] Rejoindre un club"
                      >Rejoindre un club</option
                    >
                    <option value="[Contact] Devenir partenaire"
                      >Devenir partenaire</option
                    >
                    <option value="[Contact] Question sur un événement"
                      >Question sur un événement</option
                    >
                    <option value="[Contact] Autre">Autre</option>
                  </select>
                </div>

                <!-- Message -->
                <div>
                  <label
                    for="message"
                    class="block text-sm font-semibold text-gray-900 mb-2"
                  >
                    Message *
                  </label>
                  <textarea
                    id="message"
                    name="message"
                    required
                    rows="6"
                    class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-purple-500 focus:outline-none transition-colors resize-none"
                    placeholder="Écris ton message ici..."></textarea>
                </div>

                <!-- Protection anti-spam Formspree (champ caché) -->
                <input type="hidden" name="_captcha" value="false" />

                <!-- Bouton submit -->
                <button
                  type="submit"
                  id="submit-btn"
                  class="w-full bg-gradient-to-r from-purple-600 to-pink-500 text-white px-8 py-4 rounded-lg font-semibold hover:from-purple-700 hover:to-pink-600 transition-all shadow-lg flex items-center justify-center gap-2"
                >
                  <Send class="h-5 w-5" />
                  <span id="btn-text">Envoyer le message</span>
                </button>

                <p class="text-sm text-gray-500 text-center">
                  * Champs obligatoires
                </p>

                <!-- Message de succès -->
                <div
                  id="success-message"
                  class="hidden bg-green-50 border-2 border-green-500 text-green-800 px-4 py-3 rounded-lg"
                >
                  <p class="font-semibold">✓ Message envoyé avec succès !</p>
                  <p class="text-sm mt-1">
                    Nous te répondrons dans les plus brefs délais.
                  </p>
                </div>

                <!-- Message d'erreur -->
                <div
                  id="error-message"
                  class="hidden bg-red-50 border-2 border-red-500 text-red-800 px-4 py-3 rounded-lg"
                >
                  <p class="font-semibold">Une erreur est survenue</p>
                  <p class="text-sm mt-1">
                    Réessaye plus tard ou contacte-nous directement par email.
                  </p>
                </div>
              </form>
            </div>
          </div>

          <!-- Section FAQ rapide -->
          <div class="mt-16 bg-white rounded-2xl p-8 md:p-12 shadow-lg">
            <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
              Questions fréquentes
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              <div>
                <h3 class="font-bold text-lg text-gray-900 mb-2">
                  Comment rejoindre un club ?
                </h3>
                <p class="text-gray-600">
                  Consulte notre page <a
                    href="/clubs"
                    class="text-purple-600 hover:underline">Clubs</a
                  > et contacte directement le club qui t'intéresse via leurs réseaux
                  sociaux.
                </p>
              </div>

              <div>
                <h3 class="font-bold text-lg text-gray-900 mb-2">
                  Comment devenir partenaire ?
                </h3>
                <p class="text-gray-600">
                  Envoie-nous un email à <a
                    href="mailto:hello@inter-asso.fr"
                    class="text-purple-600 hover:underline"
                    >hello@inter-asso.fr</a
                  > en expliquant ton projet de partenariat.
                </p>
              </div>

              <div>
                <h3 class="font-bold text-lg text-gray-900 mb-2">
                  Où trouver les événements à venir ?
                </h3>
                <p class="text-gray-600">
                  Retrouve tous nos événements sur notre <a
                    href="https://instagram.com/inter_asso"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-purple-600 hover:underline">Instagram</a
                  > et notre serveur Discord.
                </p>
              </div>

              <div>
                <h3 class="font-bold text-lg text-gray-900 mb-2">
                  Vous avez une idée d'événement ?
                </h3>
                <p class="text-gray-600">
                  Contacte-nous via le formulaire ci-dessus en sélectionnant
                  "Autre" comme sujet.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<script>
  // Script pour gérer la soumission avec Formspree et afficher le message de confirmation
  const form = document.getElementById("contact-form") as HTMLFormElement;
  const successMessage = document.getElementById("success-message");
  const errorMessage = document.getElementById("error-message");
  const submitBtn = document.getElementById("submit-btn") as HTMLButtonElement;
  const btnText = document.getElementById("btn-text");

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    // Désactiver le bouton et changer le texte
    submitBtn.disabled = true;
    if (btnText) btnText.textContent = "Envoi en cours...";

    // Cacher les messages précédents
    successMessage?.classList.add("hidden");
    errorMessage?.classList.add("hidden");

    const formData = new FormData(form);

    try {
      const response = await fetch(form.action, {
        method: "POST",
        body: formData,
        headers: {
          Accept: "application/json",
        },
      });

      if (response.ok) {
        // Afficher le message de succès
        successMessage?.classList.remove("hidden");

        // Reset le formulaire
        form.reset();

        // Scroll vers le message
        successMessage?.scrollIntoView({ behavior: "smooth", block: "center" });

        // Cacher le message après 8 secondes
        setTimeout(() => {
          successMessage?.classList.add("hidden");
        }, 8000);
      } else {
        // Afficher le message d'erreur
        errorMessage?.classList.remove("hidden");
        errorMessage?.scrollIntoView({ behavior: "smooth", block: "center" });
      }
    } catch (error) {
      // Afficher le message d'erreur
      errorMessage?.classList.remove("hidden");
      errorMessage?.scrollIntoView({ behavior: "smooth", block: "center" });
    } finally {
      // Réactiver le bouton
      submitBtn.disabled = false;
      if (btnText) btnText.textContent = "Envoyer le message";
    }
  });
</script>
