---
// src/pages/404.astro
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { Home, ArrowLeft } from "@lucide/astro";
---

<Layout title="Page non trouvée - 404">
  <Header />

  <main class="min-h-screen flex items-center justify-center bg-gray-50 py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-lg mx-auto text-center">
        <!-- 404 -->
        <h1 class="text-9xl font-bold text-purple-600 mb-6">404</h1>

        <!-- Titre -->
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Page introuvable</h2>

        <!-- Description -->
        <p class="text-lg text-gray-600 mb-8">
          Désolé, la page que tu cherches n'existe pas ou a été déplacée.
        </p>

        <!-- Boutons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button
            onclick="window.history.back()"
            class="inline-flex items-center justify-center gap-2 bg-white text-gray-700 border-2 border-gray-300 px-6 py-3 rounded-lg font-semibold hover:bg-gray-50 transition-all"
          >
            <ArrowLeft class="h-5 w-5" />
            Retour
          </button>

          <a
            href="/"
            class="inline-flex items-center justify-center gap-2 bg-purple-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-purple-700 transition-all"
          >
            <Home class="h-5 w-5" />
            Accueil
          </a>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>
