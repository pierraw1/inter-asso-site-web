---
// src/components/Footer.astro
import { Facebook, Instagram, Mail, MapPin, Github } from "@lucide/astro";
---

<footer class="bg-gray-900 text-white py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
      <!-- Colonne 1 : À propos -->
      <div>
        <h3 class="text-xl font-bold mb-4">INTER-ASSO IUT Lannion</h3>
        <p class="text-gray-400 mb-4">
          L'association qui rassemble tous les clubs et dynamise la vie
          étudiante de l'IUT de Lannion.
        </p>
        <div class="flex items-start gap-2 text-gray-400">
          <MapPin class="h-5 w-5 flex-shrink-0 mt-1" />
          <span>
            IUT de Lannion<br />
            7 Rue Édouard Branly<br />
            22300 Lannion
          </span>
        </div>
      </div>

      <!-- Colonne 2 : Liens rapides -->
      <div>
        <h3 class="text-xl font-bold mb-4">Liens rapides</h3>
        <ul class="space-y-2">
          <li>
            <a
              href="/"
              class="text-gray-400 hover:text-white transition-colors"
            >
              Accueil
            </a>
          </li>
          <li>
            <a
              href="/clubs"
              class="text-gray-400 hover:text-white transition-colors"
            >
              Nos clubs
            </a>
          </li>
          <li>
            <a
              href="/evenements"
              class="text-gray-400 hover:text-white transition-colors"
            >
              Événements
            </a>
          </li>
          <li>
            <a
              href="/partenaires"
              class="text-gray-400 hover:text-white transition-colors"
            >
              Partenaires
            </a>
          </li>
          <li>
            <a
              href="/contact"
              class="text-gray-400 hover:text-white transition-colors"
            >
              Contact
            </a>
          </li>
          <li>
            <a
              href="/mentions-legales"
              class="text-gray-400 hover:text-white transition-colors"
            >
              Mentions légales
            </a>
          </li>
        </ul>
      </div>

      <!-- Colonne 3 : Contact et réseaux -->
      <div>
        <h3 class="text-xl font-bold mb-4">Nous contacter</h3>
        <div class="flex items-center gap-2 text-gray-400 mb-4">
          <Mail class="h-5 w-5" />
          <a
            href="mailto:hello@inter-asso.fr"
            class="hover:text-white transition-colors"
          >
            hello@inter-asso.fr
          </a>
        </div>

        <h4 class="font-semibold mb-3">Suivez-nous</h4>
        <div class="flex gap-4">
          <a
            href="https://facebook.com/interasso22"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-gray-800 p-3 rounded-full hover:bg-purple-600 transition-colors"
            aria-label="Facebook"
          >
            <Facebook class="h-5 w-5" />
          </a>
          <a
            href="https://instagram.com/@inter_asso"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-gray-800 p-3 rounded-full hover:bg-purple-600 transition-colors"
            aria-label="Instagram"
          >
            <Instagram class="h-5 w-5" />
          </a>
        </div>
      </div>
    </div>

    <!-- Ligne de séparation -->
    <div class="border-t border-gray-800 pt-8">
      <div
        class="flex flex-col md:flex-row items-center justify-between gap-4 text-gray-400 text-sm"
      >
        <!-- Copyright -->
        <p>
          © {new Date().getFullYear()} INTER-ASSO IUT Lannion.
        </p>

        <!-- Lien GitHub -->
        <a
          href="https://github.com/pierraw1/inter-asso_website"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 hover:text-white transition-colors group"
        >
          <Github class="h-5 w-5 group-hover:scale-110 transition-transform" />
          <span>Contribuer au projet sur GitHub</span>
        </a>
      </div>
    </div>
  </div>
</footer>
