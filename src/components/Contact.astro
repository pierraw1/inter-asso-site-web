---
// Bandeau Contact simplifié
import { Mail, Phone, ArrowRight } from "@lucide/astro";
---

<section class="py-12 md:py-16 bg-gradient-to-r from-purple-600 to-pink-500">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center text-white">
      <!-- Titre -->
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Une question ? Contacte-nous !
      </h2>

      <!-- Description -->
      <p class="text-lg md:text-xl text-white/90 mb-8">
        Notre équipe est là pour répondre à toutes tes questions
      </p>

      <!-- Informations de contact rapides -->
      <div
        class="flex flex-col sm:flex-row items-center justify-center gap-6 mb-8"
      >
        <!-- Email -->
        <a
          href="mailto:hello@inter-asso.fr"
          class="flex items-center gap-2 text-white hover:text-white/80 transition-colors"
        >
          <div
            class="w-10 h-10 bg-white/20 rounded-full flex items-center justify-center"
          >
            <Mail class="h-5 w-5" />
          </div>
          <span class="font-medium">hello@inter-asso.fr</span>
        </a>

        <!-- Téléphone -->
        <a
          href="tel:+33296469090"
          class="flex items-center gap-2 text-white hover:text-white/80 transition-colors"
        >
          <div
            class="w-10 h-10 bg-white/20 rounded-full flex items-center justify-center"
          >
            <Phone class="h-5 w-5" />
          </div>
          <span class="font-medium">02 96 46 90 90</span>
        </a>
      </div>

      <!-- Bouton vers page contact -->
      <a
        href="/contact"
        class="inline-flex items-center gap-2 bg-white text-purple-600 px-8 py-4 rounded-lg font-semibold hover:bg-gray-100 transition-all shadow-lg"
      >
        Accéder au formulaire de contact
        <ArrowRight class="h-5 w-5" />
      </a>
    </div>
  </div>
</section>
