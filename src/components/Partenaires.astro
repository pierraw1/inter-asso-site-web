---
// Section Nos Partenaires
import { ArrowRight } from '@lucide/astro';

// Donn√©es des partenaires avec les vrais logos
const partenaires = [
  { nom: "BPGO", logo: "/images/partenaires/Logo-bpgo.webp" },
  { nom: "Rosa Louise", logo: "/images/partenaires/Logo-Rosa-Louise.webp" },
  { nom: "Le Truc", logo: "/images/partenaires/Logo-Le-Truc.webp" },
  { nom: "Vand B", logo: "/images/partenaires/Logo-VandB.webp" },
  { nom: "Le Diplomate", logo: "/images/partenaires/Logo-Le-Diplomate.webp" }

];
---

<section class="py-16 md:py-24 bg-gradient-to-br from-gray-50 to-gray-100">
  <div class="container mx-auto px-4">
    <!-- Titre de section -->
    <div class="max-w-3xl mx-auto text-center mb-12">
      <h2 class="text-3xl md:text-5xl font-bold text-gray-900 mb-4">
        Nos Partenaires
      </h2>
      <p class="text-lg text-gray-600">
        Ils nous soutiennent et nous font confiance
      </p>
    </div>

    <!-- Grille des logos partenaires -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8 max-w-5xl mx-auto mb-12">
      {partenaires.map((partenaire) => (
        <div class="bg-white rounded-xl p-6 flex items-center justify-center hover:shadow-xl transition-all group">
          <div class="w-full h-full flex items-center justify-center">
            <!-- Logo du partenaire -->
            <img 
              src={partenaire.logo} 
              alt={`Logo ${partenaire.nom}`}
              class="max-w-full max-h-24 object-contain group-hover:scale-105 transition-transform"
            />
          </div>
        </div>
      ))}
    </div>

    <!-- Bouton voir tous les partenaires -->
    <div class="text-center">
      <a 
        href="/partenaires"
        class="inline-flex items-center gap-2 bg-purple-600 text-white px-8 py-4 rounded-lg font-semibold hover:bg-purple-700 transition-colors shadow-lg"
      >
        Voir tous nos partenaires
        <ArrowRight class="h-5 w-5" />
      </a>
    </div>
  </div>
</section>